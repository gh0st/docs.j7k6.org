<span class="kd">var</span> <span class="nx">highlightText</span> <span class="o">=</span> <span class="nx">searchResult</span><span class="p">.</span><span class="nx">replace</span><span class="p">((</span><span class="k">new</span> <span class="nb">RegExp</span><span class="p">(</span><span class="nx">searchQuery</span><span class="p">.</span><span class="nx">split</span><span class="p">(</span><span class="sr">/</span><span class="se">\s</span><span class="sr">/</span><span class="p">).</span><span class="nx">join</span><span class="p">(</span><span class="dl">'</span><span class="s1">|</span><span class="dl">'</span><span class="p">),</span> <span class="dl">'</span><span class="s1">gi</span><span class="dl">'</span><span class="p">)),</span> <span class="nx">match</span> <span class="o">=&gt;</span> <span class="s2">`&lt;strong&gt;</span><span class="p">${</span><span class="nx">match</span><span class="p">}</span><span class="s2">&lt;/strong&gt;`</span><span class="p">);</span>
