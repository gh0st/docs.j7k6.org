I"^<div class="language-bash highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="c"># add default gateway</span>
ip route add default via &lt;<span class="nv">$GATEWAY_IP</span><span class="o">&gt;</span>

<span class="c"># add static route</span>
ip route add &lt;<span class="nv">$DST_NET</span><span class="o">&gt;</span> via &lt;<span class="nv">$GATEWAY_IP</span><span class="o">&gt;</span> dev &lt;<span class="nv">$DEV</span><span class="o">&gt;</span>

<span class="c"># show routing table</span>
ip route show

<span class="c"># add ip address to device</span>
ip addr add &lt;<span class="nv">$IP</span><span class="o">&gt;</span>/&lt;<span class="nv">$NETMASK</span><span class="o">&gt;</span> dev &lt;<span class="nv">$DEV</span><span class="o">&gt;</span>

<span class="c"># remove ip address from device</span>
ip addr del &lt;<span class="nv">$IP</span><span class="o">&gt;</span>/&lt;<span class="nv">$NETMASK</span><span class="o">&gt;</span> dev &lt;<span class="nv">$DEV</span><span class="o">&gt;</span>

<span class="c"># enable interface</span>
ip <span class="nb">link set</span> &lt;<span class="nv">$DEV</span><span class="o">&gt;</span> up

<span class="c"># disable interface</span>
ip <span class="nb">link set</span> &lt;<span class="nv">$DEV</span><span class="o">&gt;</span> down
</code></pre></div></div>

